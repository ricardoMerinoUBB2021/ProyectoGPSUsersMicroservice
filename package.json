{
  "name": "users-microservice",
  "version": "1.0.0",
  "description": "Microservice for managing users in a communal pharmacy system.",
  "main": "src/app.ts",
  "scripts": {
    "start": "ts-node src/server.ts",
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "npm run typeorm migration:generate",
    "migration:run": "npm run typeorm migration:run",
    "migration:revert": "npm run typeorm migration:revert",
    "seed": "ts-node src/utils/seed-database.ts",
    "init:db": "ts-node src/utils/init-database.ts",
    "init:db:postgres": "psql -U $DB_USER -d $DB_NAME -h $DB_HOST -f src/config/init-database.sql",
    "test": "jest --coverage --verbose",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage --ci --watchAll=false",
    "test:unit": "jest --testPathPattern=test/.*\\.test\\.ts --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "dependencies": {
    "@types/uuid": "^10.0.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "ms": "^2.1.3",
    "node-fetch": "^2.7.0",
    "pg": "^8.15.6",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.1.6",
    "typeorm": "^0.3.12",
    "users-microservice": "file:",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/ms": "^2.1.0",
    "@types/node": "^18.19.100",
    "@types/pg": "^8.15.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.3"
  },
  "keywords": [
    "microservice",
    "users",
    "pharmacy",
    "express",
    "typeorm"
  ],
  "author": "Your Name",
  "license": "MIT"
}
